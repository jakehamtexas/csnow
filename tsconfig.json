{
	"compilerOptions": {
		"alwaysStrict": true,
		"strict": true,
		"strictNullChecks": true,
		"noUncheckedIndexedAccess": true,
		"target": "ES2019",
		"moduleResolution": "node",
		"composite": true,
		"types": ["node"],
		"isolatedModules": true,
		"allowJs": true,
		"esModuleInterop": true,
		"outDir": "dist"
	},
	"include": ["./src"]
}